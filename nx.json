{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.devcontainer/**/*",
      "{workspaceRoot}/.github/**/*",
      "{workspaceRoot}/run/**/*",
      "{workspaceRoot}/*"
    ],
    "default": [
      "sharedGlobals",
      { "dependentTasksOutputFiles": "**/*" },
      "{projectRoot}/**/*"
    ]
  },
  "targetDefaults": {
    "ci": {
      "dependsOn": ["check", "build", "test", "pack"],
      "executor": "nx:noop",
      "cache": true
    },
    "init": {
      "dependsOn": ["^init"],
      "inputs": ["default"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "shx run/init"
      },
      "cache": true
    },
    "check": {
      "dependsOn": ["init", "^build"],
      "inputs": ["default"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "shx run/check"
      },
      "cache": true
    },
    "build": {
      "dependsOn": ["init", "^build"],
      "inputs": ["default"],
      "outputs": ["{projectRoot}/dist"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "shx run/build"
      },
      "cache": true
    },
    "test": {
      "dependsOn": ["init"],
      "inputs": ["default"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "shx run/test"
      },
      "cache": true
    },
    "dev": {
      "dependsOn": ["init", "build"],
      "inputs": ["default"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "shx run/dev"
      },
      "continuous": true
    }
  }
}
